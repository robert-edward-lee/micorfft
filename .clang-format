---
# base settings
Language: Cpp
ColumnLimit: 120
# indent settings
IndentWidth: 4
AccessModifierOffset: -4
IndentCaseLabels: true
# alignment settings
AlignEscapedNewlines: DontAlign
AlignOperands: AlignAfterOperator
AlignTrailingComments: Never
QualifierAlignment: Custom
QualifierOrder:
    ["static", "inline", "constexpr", "const", "volatile", "type", "restrict"]
# break lines settings
AllowAllArgumentsOnNextLine: false
AllowAllParametersOfDeclarationOnNextLine: false
BinPackArguments: false
BinPackParameters: false
AllowShortBlocksOnASingleLine: Empty
AllowShortFunctionsOnASingleLine: Empty
BreakBeforeBinaryOperators: NonAssignment
BreakBeforeBraces: Attach
InsertBraces: true
CompactNamespaces: true
# insert/remove spaces settings
BitFieldColonSpacing: After
SpaceAfterTemplateKeyword: false
SpaceBeforeCtorInitializerColon: false
SpaceBeforeInheritanceColon: false
SpaceBeforeParens: Never
SpaceBeforeRangeBasedForLoopColon: false
SpaceInEmptyBlock: false
# sort
SortUsingDeclarations: Never
# macros
AttributeMacros: [MF_NODISCARD, MF_NODISCARD_MSG, MF_OPTIMIZE]
IfMacros: [MF_IF_CONSTEXPR]
